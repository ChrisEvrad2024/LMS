{
  "openapi": "3.0.0",
  "info": {
    "title": "LMS API",
    "version": "1.0.0",
    "description": "Documentation complète de l'API LMS"
  },
  "paths": {
    "/api/courses": {
      "post": {
        "tags": ["Courses"],
        "summary": "Créer un nouveau cours",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "201": { "description": "Cours créé avec succès" },
          "403": { "description": "Accès refusé" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
